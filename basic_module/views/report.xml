        </t>
    </template>
    <!--?   report generation-->
    <template id="student_report">
        <t t-call="basic_module.template_report_format">
            <t t-foreach="docs" t-as="doc">
                <div style="">
                    <h1 t-field="doc.name" style="font-size:3rem;" class="text-primary"></h1>
                    <span class="text-primary">hi bro</span>
                </div>
            </t>
        </t>
